<center>
  <div class="container">
    <div class="row">
    <h2>Add a New Shelter:</h2>
      <%= form_tag '/shelters' do %>
        <p><%= label_tag :name %>
        <%= text_field_tag :name %></p><br>

        <p><%= label_tag :address %>
        <%= text_field_tag :address %></p><br>

        <p><%= label_tag :city %>
        <%= text_field_tag :city %></p><br>

        <p><%= label_tag :state %>
        <%= text_field_tag :state %></p><br>

        <p><%= label_tag :zip %>
        <%= text_field_tag :zip %></p><br>

        <%= submit_tag 'Create Shelter' %>
      <% end %>
    </div>
  </div>
</center>
