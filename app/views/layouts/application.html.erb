<!DOCTYPE html>
<html>
  <head>
    <title>AdoptDontShop</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>
  <% flash.each do |type, message| %>
  <p><%= message %></p>
  <% end  %>
  <div>
    <h1>Adopt Don't Shop!</h1>
    <ul>
      <li> <%= link_to "Shelter List", "/shelters" %></li>
      <li> <%= link_to "Pets List", "/pets" %></li>
      <%= require "pry"; binding.pry %>
      <li> <%= link_to "(#{favorites.count}) Favorited Pets", "/favorites" %></li>
    </ul>
  </div>
    <%= yield %>
  </body>
</html>
