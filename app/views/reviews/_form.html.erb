<%= form_tag path, method: method do %>
  <p><%= label_tag :title %>
  <%= text_field_tag :title, title %>
  <p><%= label_tag :rating %>
  <%= number_field_tag :rating, rating %></p>
  <p><%= label_tag :content %>
  <%= text_field_tag :content, content %></p>
  <p><%= label_tag :picture %>
  <%= text_field_tag :picture, picture %></p>

<%= submit_tag button_text %>
<% end %>
