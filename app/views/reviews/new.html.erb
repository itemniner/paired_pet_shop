<%= form_tag "/shelters/#{@shelter.id}", method: :post do %>
  <p><%= label_tag :title %>
  <%= text_field_tag :title, nil, :required => true %>
  <p><%= label_tag :rating %>
  <%= number_field_tag :rating %></p>
  <p><%= label_tag :content %>
  <%= text_field_tag :content %></p>
  <p><%= label_tag :picture %>
  <%= text_field_tag :picture %></p>

<%= submit_tag 'Submit' %>
<% end %>